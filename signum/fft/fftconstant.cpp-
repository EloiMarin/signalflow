#include "fftconstant.h"

namespace signum
{

FFTConstant::FFTConstant(sample value) : FFTUnit()
{
	this->value = value;
	this->name = "fft_constant";

	this->min_input_channels = 0;
	this->max_input_channels = 0;
}

void FFTConstant::next(sample **out, int num_frames)
{
	#if __APPLE__
	vDSP_vfill(&(this->value), out[0], 1, num_frames);
	#else
	for (int frame = 0; frame < num_frames; frame++)
		out[0][frame] = this->value;
	#endif
}

}
